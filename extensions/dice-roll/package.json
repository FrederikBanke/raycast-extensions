{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dice-roll",
  "title": "Dice Roll",
  "description": "Roll any sided dice.",
  "icon": "extension_icon.png",
  "author": "ToxicMelon",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "roll",
      "title": "Roll Dice",
      "subtitle": "Roll any number of n-sided dice",
      "description": "Roll any number of n-sided dice.",
      "mode": "view",
      "keywords": [
        "roll",
        "dice",
        "die",
        "d20"
      ],
      "arguments": [
        {
          "name": "dice",
          "placeholder": "1d20 + 2d4",
          "required": false,
          "type": "text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.51.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}